#!/bin/bash

if [ -d "/sys/bus/pci/devices/0000:01:00.0/" ]; then
  echo "dGPU present"
  echo "stopping display-manager"
  systemctl stop display-manager
  sleep 1

  echo "removing nvidia kernel modules"
  rmmod nvidia_uvm
  rmmod nvidia_drm
  rmmod nvidia_modeset
  rmmod nvidia

  sleep 1

  echo "acpi_call to power off the dGPU"
  # sh -c 'echo "\\_SB.PCI0.GPP0.PG00._OFF" > /proc/acpi/call'
  echo 1 > /sys/bus/pci/devices/0000\:01\:00.0/remove

  sleep 1

  echo "removing /etc/asus_nvidia"
  rm /etc/asus_nvidia

  echo "restarting display manager"
  systemctl restart display-manager.service
else
  echo "dGPU not present"

  echo "stopping the display-manager"
  systemctl stop display-manager.service
  sleep 1

  echo "acpi_call to power on the dGPU"
  # sudo sh -c 'echo "\\_SB.PCI0.GPP0.PG00._ON" > /proc/acpi/call'
  echo 1 > /sys/bus/pci/rescan
  sleep 1

  echo "loading nvidia kernel modules"
  modprobe nvidia_uvm
  modprobe nvidia_drm
  modprobe nvidia_modeset
  modprobe nvidia

  echo "setting nvidia power/control auto"
  echo 'auto' > /sys/bus/pci/devices/0000\:01\:00.0/power/control

  echo "setting /etc/asus_nvidia"
  touch /etc/asus_nvidia

  echo "restarting display manager"
  systemctl restart display-manager.service
fi
